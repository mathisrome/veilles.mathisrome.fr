pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Stop Previous') {
            steps {
                script {
                    // Arrêter le service Docker précédent s'il est en cours d'exécution
                    sh "docker-compose -f docker-compose.prod.yml down"
                }
            }
        }
        stage('Build') {
            environment {
                DOCKER_REGISTRY = 'https://registry.hub.docker.com/mathisrome/' // URL du registre Docker
                DOCKER_CREDS = 'docker_account'
            }
            steps {
                script {
                    docker.withRegistry("${DOCKER_REGISTRY}", "${DOCKER_CREDS}") {
                        sh "git archive --output=app/build.tar.gz --format=tar HEAD ./app"
                        dir('app') {
                            def dockerImage = docker.build('veilles-mathisrome-fr', '-f Dockerfile.prod .')
                            dockerImage.push()
                        }
                    }
                }
            }
        }

        stage('Deliver') {
            agent {
                label 'deploy'
            }
            steps {
                sh "docker compose -f docker-compose.prod.yml up -d"
            }
        }
    }
}
