pipeline {
    agent {
        label 'master'
    }
    tools {
        // a bit ugly because there is no `@Symbol` annotation for the DockerTool
        // see the discussion about this in PR 77 and PR 52:
        // https://github.com/jenkinsci/docker-commons-plugin/pull/77#discussion_r280910822
        // https://github.com/jenkinsci/docker-commons-plugin/pull/52
        'org.jenkinsci.plugins.docker.commons.tools.DockerTool' 'null'
      }
    stages {
        stage('Build') {
            environment {
                DOCKER_REGISTRY = 'https://registry.hub.docker.com' // URL du registre Docker
                DOCKER_CREDS = credentials('docker_account')
            }
            steps {
                script {
                    sh "git archive --output=app/build.tar.gz --format=tar HEAD ./app"
                    dir('app') {
                        docker.withRegistry("${DOCKER_REGISTRY}", "${DOCKER_CREDS}") {
                            def dockerImage = docker.build('veilles-mathisrome-fr', '-f Dockerfile.prod .')
                            dockerImage.push()
                        }
                    }
                }
            }
        }

        stage('Deliver') {
            agent {
                label 'deploy'
            }
            steps {
                sh "docker compose -f docker-compose.prod.yml up -d"
            }
        }
    }
}
