pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh "git archive --output=app/build.tar.gz --format=tar HEAD ./app"
                    dir('app') {
                        docker.withRegistry("https://registry.hub.docker.com", "docker-account") {
                            def dockerImage = docker.build('veilles-mathisrome-fr', '-f Dockerfile.prod .')
                            dockerImage.push()
                        }
                    }
                }
            }
        }

        stage('Deliver') {
            agent {
                label 'deploy'
            }
            steps {
                sh "docker compose -f docker-compose.prod.yml up -d"
            }
        }
    }

    post {
        always {
            // Efface les identifiants après utilisation pour des raisons de sécurité
            docker.image('nom_image:tag').push('-')
        }
    }
}
